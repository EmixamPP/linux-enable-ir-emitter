pre_remove() {
  systemctl disable linux-enable-ir-emitter &> /dev/null
}

post_remove() {
  # delete python cache
  rm -rf /usr/lib/linux-enable-ir-emitter/

  # delete drivers
  rm -rf /etc/linux-enable-ir-emitter
  
  # delete udev rule
  rm -f /etc/udev/rules.d/99-linux-enable-ir-emitter.rules
}
